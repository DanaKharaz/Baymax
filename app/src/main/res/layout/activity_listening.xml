<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListeningActivity"
    android:background="@color/ui_bg">

    <TextView
        android:id="@+id/ListeningLabelTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="LISTENING"
        android:fontFamily="monospace"
        android:textColor="@color/text_primary"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ListeningTimeTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="[time placeholder]"
        android:fontFamily="monospace"
        android:textColor="@color/text_primary"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ListeningLabelTxt" />

    <Button
        android:id="@+id/ListeningStopBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:insetLeft="10dp"
        android:insetTop="10dp"
        android:insetRight="10dp"
        android:insetBottom="10dp"
        android:text="STOP"
        android:fontFamily="monospace"
        android:textSize="30sp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/clear"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/red"
        app:cornerRadius="7dp"
        app:iconPadding="0dp"
        app:strokeColor="@color/red"
        app:strokeWidth="3dp"/>

    <TextView
        android:id="@+id/ListeningWave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="[wave placeholder]"
        app:layout_constraintBottom_toTopOf="@+id/ListeningStopBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ListeningTimeTxt" />


</androidx.constraintlayout.widget.ConstraintLayout>